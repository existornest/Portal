<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

    <title>@ViewBag.Title - Portal Adversum Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>



    <div class="col-md-12">

        <nav id="adv-navbar" class="navbar navbar-default navbar-fixed-top">
            <div class="row">

                <div id="nav-wrapper" class="col-md-12">
                    <hr class="hr-gradient" style="position: relative;" />
                    <ul class="nav navbar-nav pull-left" style="height: 100px;">
                        <li class="adv-li-nav">
                            <img alt="Adversum" title="Adversum_logo" src="~/Content/images/adv_logo.png" />
                        </li>
                    </ul>

                    <ul class="nav navbar-nav pull-right" style="height: 100px;">
                        <li class="adv-li-nav adv-active"><a href="/">Home</a></li>
                        <li class="adv-li-nav"><a href="#">O nas</a></li>
                        <li class="adv-li-nav"><a href="#">Cennik</a></li>
                        <li class="adv-li-nav"><a href="#">Kontakt</a></li>
                        <li class="adv-li-nav"><a href="#">Napisz do nas</a></li>

                        @if (null != Session["loggedUser"])
                        {
                            <li class="adv-li-nav">@Html.ActionLink("WYLOGUJ", "LogOut", "Login")</li>
                        }

                    </ul>

                </div>

            </div>
            <hr class="hr-gradient" style="position: relative;" />
        </nav>

    </div>
    <hr class="hr-gradient" />




    <div class="container-fluid">

        @if (null == Session["loggedUser"])
        {
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center rn-margin-top-100">
                    <h2>
                        Witamy w portalu Klienta Adversum
                    </h2>
                </div>

            </div>
        }

        

        <div class="row">
            <div class="col-md-12" style="margin-top: 10px;">
                <ol class="breadcrumb">


                    @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
                    {
                        @Html.ActionLink("Strona główna", "Index", "Home")
                        <li class="active">
                            / @ViewBag.Title
                        </li>
                    }
                    else
                    {
                        <li class="active">
                            Strona główna
                        </li>
                    }

                </ol>
            </div>
        </div>



        @RenderBody()

        <hr class="hr-gradient" />

        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                <h2>
                    &copy; @DateTime.Now.Year - Portal Adversum Application
                </h2>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/script.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
