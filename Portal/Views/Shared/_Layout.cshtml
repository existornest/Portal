<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="icon" type="image/png" href="~/Content/images/ficon.png">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>



    <div class="col-md-12">

        <div id="adv-navbar" class="navbar navbar-default navbar-fixed-top">

            <div class="container-fluid">

                <div id="nav-wrapper" class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mynavbar-content">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">
                        <img alt="Adversum" title="Adversum_logo" src="~/Content/images/adv_logo.png" />
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="mynavbar-content">

                    @Html.Partial("_CommonMenuPartial")

                </div>
                <hr class="hr-gradient" />
            </div>
        </div>

    </div>
   
    <div class="row">
        <div class="col-md-12 buffer" style="margin-top: 50px;">

        </div>
    </div>

    @Html.Partial("_partialMessages")

    <div class="container-fluid">

        @if (null == Session["loggedUser"])
            {
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center" style="margin-top: 50px;">
                    <h2 class="text-shadowed-dark">
                        Witamy w portalu Klienta Adversum
                    </h2>
                </div>

            </div>
        }



       
        <div class="row">

            <div class="col-md-12">

                @RenderBody()

            </div>

        </div>

        <div class="row">
            <div class="col-md-12 buffer">

            </div>
        </div>


    </div>

    @Html.Partial("_footerPartial")


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/script.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
