<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>



    <div class="col-md-12">

        <nav id="adv-navbar" class="navbar navbar-default navbar-fixed-top">
            <div class="row">

                <div id="nav-wrapper" class="col-md-12">
                    <hr class="hr-gradient" style="position: relative;" />
                    <ul class="nav navbar-nav pull-left" style="height: 100px;">
                        <li class="adv-li-nav">
                            <img alt="Adversum" title="Adversum_logo" src="~/Content/images/adv_logo.png" />
                        </li>
                    </ul>

                    <ul class="nav navbar-nav pull-right" style="height: 100px;margin-right: 10px;">

                        @if (ViewBag.Title != "Strona Główna")
                        {
                            <li class="adv-li-nav adv-active"><a href="/">Home</a></li>
                        }


                        @if (null != Session["loggedUser"] 
                            && ViewContext.RouteData.Values["controller"].ToString() == "Portal" 
                            && ViewContext.RouteData.Values["action"].ToString() != "Index")
                        {
                            <li>
                                @Html.ActionLink("Sprawy", "Index", "Portal")
                            </li>
                        }

                        @if (null != Session["loggedUser"])
                        {
                            <li class="adv-li-nav">@Html.ActionLink("Instrukcja", "Instruction", "Portal")</li>
                            
                        }

                       
                        

                        @if (null != Session["loggedUser"])
                        {
                            <li class="adv-li-nav">@Html.ActionLink("WYLOGUJ", "LogOut", "Login")</li>
                        }
                        

                    </ul>

                </div>

            </div>
            <hr class="hr-gradient" style="position: relative;" />
        </nav>

    </div>
    <hr class="hr-gradient" />




    <div class="container-fluid">

        @if (null == Session["loggedUser"])
        {
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center rn-margin-top-100">
                    <h2 class="text-shadowed-dark">
                        Witamy w portalu Klienta Adversum
                    </h2>
                </div>

            </div>
        }



        <div class="row">
            <div class="col-md-12" style="margin-top: 10px;">
                <ol class="breadcrumb well">


                    @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
                    {
                        @Html.ActionLink("Strona główna", "Index", "Home")
                        <li class="active">
                            / @ViewBag.Title
                        </li>
                    }
                    else
                    {
                        <li class="active">
                            Strona główna
                        </li>
                    }

                </ol>
            </div>
        </div>

        <div class="row">

            <div class="col-md-12">

                @RenderBody()

            </div>

        </div>

        

        <hr class="hr-gradient" />

        <div class="row">
            <div id="adv-footer" class="col-md-12 text-center">
                <h2 class="text-shadowed">
                    &copy; @DateTime.Now.Year - Portal Adversum Application
                </h2>

                <div class="row">

                    <div class="col-md-6 col-md-offset-3">

                        <p>
                            Adversum Sp. z o.o.
                        </p>
                        <p>
                            ul. Bajońska 13 lok. 14,
                        </p>
                        <p>
                            03-963 Warszawa
                        </p>
                        <p>
                            0 801 011 490
                        </p>
                        <p>
                            22 616 40 77
                        </p>
                        <p>
                            info@adversum.pl
                        </p>






                    </div>

                </div>

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/script.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
