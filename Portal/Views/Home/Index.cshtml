@{
    ViewBag.Title = "Strona Główna";
}

<br />






@if (null == Session["loggedUser"])
{

    <div class="row">
        <div class="col-md-12 text-center">


            @using (Html.BeginForm("CreateSession", "Home", FormMethod.Post))
                {

                <div class="col-md-2 col-md-offset-3">

                    @Html.DropDownList("AccountOrContact", null, new { @class = "form-control" })

                </div>



                <div class="col-md-2">
                    <input type="submit" class="btn btn-info" value="Zaloguj" name="logIn" />
                </div>

            }

            <div class="col-md-2">
                <a class="btn btn-info" href="/Reset">
                    Zresetuj hasło
                </a>
            </div>

        </div>



    </div>







}
else
{
    <div class="row">

        <div class="col-md-4 col-md-offset-4 text-center" style="margin-top: 100px;">

            <h1>
                Jesteś zalogowany/a jako <span style="font-weight: 800;">@Session["userName"]</span>
            </h1>

        </div>

    </div>
}
