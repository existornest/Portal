@model List<SelectListItem>
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 text-center">
        <h3>Wybierz firmę</h3>

    </div>
</div>


<div class="row">

    <div class="col-md-4 col-md-offset-5 text-center">

        @using (Html.BeginForm("Account", "Home", FormMethod.Post, new { @role = "form" }))
        {
            <div class="form-group">
                @Html.DropDownList("Accounts", null, new { @class = "form-control" })
            </div>
           

            <div class="form-group pull-left">
                <input type="submit" class="btn btn-info" value="Zaloguj" name="logIn" />
            </div>
        }

    </div>

</div>
