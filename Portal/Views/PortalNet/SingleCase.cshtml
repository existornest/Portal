<h2>
    Działania
</h2>

<div class="row">

    <div class="col-md-12" style="padding: 40px;">

        <table class="table table-bordered table-responsive">
            <thead>
                <tr class="active" style="font-weight: 600;">
                    <td>
                        Temat
                    </td>
                    <td>
                        Typ działania
                    </td>
                    <td>
                        Data ukończenia
                    </td>
                    <td>
                        Właściciel
                    </td>
                    <td>
                        Opis
                    </td>
                </tr>
            </thead>


            <tbody>

                @foreach (ActivityPointer item in ViewBag.Aps)
                {
                    <tr>
                        <td>
                            @item.Subject
                        </td>
                        <td>
                            @CaseHelper.TypeString(item.ActivityTypeCode)
                        </td>
                        <td>
                            @CaseHelper.DateString(item)
                        </td>
                        <td>
                            @item.OwnerId.Name
                        </td>
                        <td>
                            @item.Description
                        </td>
                    </tr>
                }


            </tbody>



        </table>
    </div>

</div>




